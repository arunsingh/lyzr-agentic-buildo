{
  "name": "aob-platform-ui",
  "version": "1.0.0",
  "description": "AOB Platform Unified Monitoring Dashboard",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "vite-bundle-analyzer",
    "lighthouse": "lighthouse http://localhost:5173 --output html --output-path ./lighthouse-report.html",
    "perf": "npm run build && npm run lighthouse"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "zustand": "^4.3.0",
    "chart.js": "^4.2.0",
    "react-chartjs-2": "^5.2.0",
    "lucide-react": "^0.263.0",
    "clsx": "^1.2.0",
    "tailwind-merge": "^1.10.0",
    "web-vitals": "^3.3.0",
    "date-fns": "^2.29.0",
    "react-query": "^3.39.0",
    "axios": "^1.3.0",
    "react-hot-toast": "^2.4.0",
    "framer-motion": "^10.0.0",
    "react-intersection-observer": "^9.4.0",
    "react-virtualized-auto-sizer": "^1.0.0",
    "react-window": "^1.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.0",
    "postcss": "^8.4.0",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.2.0",
    "typescript": "^4.9.0",
    "vite": "^4.1.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^0.28.0",
    "@vitest/ui": "^0.28.0",
    "jsdom": "^21.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/user-event": "^14.0.0",
    "lighthouse": "^10.0.0",
    "esbuild": "^0.17.0",
    "rollup": "^3.0.0",
    "terser": "^5.16.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
