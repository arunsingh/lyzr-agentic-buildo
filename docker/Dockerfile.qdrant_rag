FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy service code
COPY services/qdrant_rag /app/services/qdrant_rag

# Install Python dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    qdrant-client \
    sentence-transformers \
    torch \
    numpy \
    httpx

# Install the service
RUN pip install -e /app/services/qdrant_rag

# Expose port
EXPOSE 8090

# Run the service
CMD ["uvicorn", "services.qdrant_rag.src.qdrant_rag.app:app", "--host", "0.0.0.0", "--port", "8090"]
